<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/invoice_layout"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Logo and App Name -->
    <ImageView
        android:id="@+id/invoice_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/car" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RentCars"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/invoice_username"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: [Username]"
        android:layout_marginTop="20dp"/>

    <!-- Car Details -->
    <TextView
        android:id="@+id/invoice_car_name"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Name" />

    <!-- Seating Capacity -->
    <TextView
        android:id="@+id/invoice_seating_capacity"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seating Capacity" />

    <!-- Booking Date -->
    <TextView
        android:id="@+id/invoice_booking_date"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Date" />

    <!-- Total KM -->
    <TextView
        android:id="@+id/invoice_total_km"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total KM" />

    <!-- Total Amount -->
    <TextView
        android:id="@+id/invoice_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <!-- Download Button
    <Button
        android:id="@+id/download_invoice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Invoice"
        android:layout_marginTop="20dp" /> -->
</LinearLayout>

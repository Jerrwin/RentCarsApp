<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.UserViewBookings">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@drawable/car"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calistoga"
        android:layout_marginTop="50dp"
        android:text="YOUR BOOKINGS"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/noBookingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No bookings"
        android:visibility="gone"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userbookingsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_above="@+id/usernav_container"
        android:scrollbars="vertical" />

    <!-- LinearLayout for equally spaced NAVs -->
    <LinearLayout
        android:id="@+id/usernav_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <!-- Second FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/user_viewcars_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/black"
            app:tint="@color/white"
            android:src="@drawable/baseline_nav_car_24" />

        <!-- Third FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/user_profile_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/black"
            app:tint="@color/white"
            android:src="@drawable/baseline_person_outline_24" />

        <!-- Fourth FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/user_feedback_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/black"
            app:tint="@color/white"
            android:src="@drawable/baseline_nav_feedback_24" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/user_logout_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:backgroundTint="@color/red"
            app:tint="@color/white"
            android:src="@drawable/baseline_logout_24" />

    </LinearLayout>

</RelativeLayout>
